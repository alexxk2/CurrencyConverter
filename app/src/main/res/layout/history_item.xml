<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/currency_item_height">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currency_card_view"
        style="@style/CurrencyCardBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/currency_card_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/currency_start_flag_image"
                android:layout_width="0dp"
                tools:src ="@drawable/ca"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:contentDescription="@string/flag"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/start_currency_info"
                style="@style/CurrencyItemText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="28" />

            <ImageView
                android:id="@+id/arrow_image"
                android:layout_width="0dp"
                tools:src ="@drawable/ic_arrow_right"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:contentDescription="@string/arrow"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/end_currency_info"
                style="@style/CurrencyItemText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="28" />

            <ImageView
                android:id="@+id/currency_end_flag_image"
                android:layout_width="0dp"
                tools:src ="@drawable/ca"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:contentDescription="@string/flag"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
