<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currency_card_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="2dp"
        app:cardCornerRadius="@dimen/input_corner_radius_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardPreventCornerOverlap="false"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/currency_flag_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:scaleType="centerCrop"

                android:contentDescription="@string/flag" />

            <TextView
                android:id="@+id/currency_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/clear_button_margin_end"
                android:text="@string/default_text_recycler_view" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
