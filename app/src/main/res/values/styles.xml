<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Search screen(currency_item)-->
    <style name="CurrencyCardBackground">
        <item name="android:layout_marginHorizontal">@dimen/currency_card_sides_margin</item>
        <item name="cardCornerRadius">@dimen/input_corner_radius_medium</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="CurrencyItemText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/clear_button_margin_end</item>
        <item name="android:text">@string/default_text_recycler_view</item>
    </style>


    <!--Search screen-->
    <style name="SearchScreenBackground">

    </style>

    <style name="AnyScreenBackButton">
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:layout_marginStart">@dimen/navigation_buttons_margin</item>
        <item name="android:layout_marginTop">@dimen/navigation_buttons_margin</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SearchEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/navigation_buttons_margin</item>
        <item name="android:hint">@string/search</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius_medium</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">@color/grey</item>
    </style>

    <style name="SearchEditTextInput">
        <item name="android:inputType">text</item>
        <item name="android:padding">0dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_grey</item>
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:textSize">@dimen/search_edit_text_size</item>

    </style>

    <style name="SearchButtonClear">
        <item name="android:layout_marginTop">@dimen/clear_button_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/clear_button_margin_end</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="android:visibility">gone</item>
    </style>


    <!--Converter screen-->
    <style name="ConvertButton">
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:background">@drawable/convert_button_background</item>
        <item name="android:src">@drawable/ic_convert_new</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="ProgressBar">
        <item name="android:visibility">visible</item>
    </style>

    <style name="ConvertEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius_large</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius_large</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius_large</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius_large</item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_margin</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/grey</item>
    </style>

    <style name="ConvertEditTextInput">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:digits">1234567890.</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">14</item>
        <item name="android:textSize">@dimen/converter_edit_text_size</item>
    </style>

    <style name="ConverterClearButton">
        <item name="android:layout_marginTop">@dimen/clear_button_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/clear_button_margin_end</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="FlagsCardView">
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/flag_corner_radius</item>
    </style>

    <style name="SwapButtonBackground">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">false</item>
        <item name="android:src">@drawable/white_circle</item>
    </style>

    <style name="SwapButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_swap</item>
    </style>

    <style name="SettingButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginTop">@dimen/navigation_buttons_margin</item>
        <item name="android:layout_marginEnd">@dimen/navigation_buttons_margin</item>
        <item name="android:src">@drawable/ic_settings</item>
    </style>

    <style name="ConverterResultTextInfo">
        <item name="android:layout_marginTop">@dimen/navigation_buttons_margin</item>
        <item name="android:paddingEnd">@dimen/results_padding_end</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">@dimen/result_info_text_size</item>
    </style>

    <style name="ConverterResult">
        <item name="android:layout_marginTop">@dimen/clear_button_margin_end</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="android:paddingEnd">@dimen/results_padding_end</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorImage">
        <item name="android:src">@drawable/ic_no_internet</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:layout_marginTop">@dimen/error_components_margin</item>
        <item name="android:text">@string/error_message</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RefreshButton">
        <item name="android:layout_marginTop">@dimen/error_components_margin</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:text">@string/refresh</item>
    </style>

    <!--Settings screen-->
    <style name="SettingsTitle">
        <item name="android:text">@string/settings</item>
        <item name="android:textSize">@dimen/settings_title_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/navigation_buttons_margin</item>
    </style>

    <style name="SettingsTextItems">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/settings_text_items_margin_top</item>
        <item name="android:textSize">@dimen/settings_text_items_size</item>
    </style>

    <style name="SettingsSwitchers">
        <item name="android:layout_marginEnd">@dimen/navigation_buttons_margin</item>
    </style>

    <style name="Material3CustomTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorSecondaryContainer">@color/soft_blue</item>
        <item name="colorSurface">@color/white</item>
        <!--switch thumb and track colors unchecked -->
        <!--<item name="colorOnSurface">@color/soft_blue</item>-->
    </style>

    <style name="LanguageChipGroup">
        <item name="selectionRequired">true</item>
        <item name="singleLine">true</item>
        <item name="singleSelection">true</item>
        <item name="android:layout_marginEnd">@dimen/navigation_buttons_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:theme">@style/Material3CustomTheme</item>
        <item name="checkedChip">@id/chip_english</item>
    </style>

    <style name="LanguageChip" parent="Widget.Material3.Chip.Filter">
        <item name="android:textSize">@dimen/language_chip_text_size</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
    </style>


</resources>